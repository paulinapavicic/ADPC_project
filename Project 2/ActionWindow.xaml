<Window x:Class="Project_2.ActionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_2"
        mc:Ignorable="d"
       Title="Action Window" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtTitle" Grid.Row="0" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBlock x:Name="txtMessage" Grid.Row="0" Margin="0,30,0,10"/>

        <ListBox x:Name="lstItems" Grid.Row="1" SelectionMode="Multiple"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnCancel" Content="Cancel" Width="80" Click="btnCancel_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnOk" Content="OK" Width="80" Click="btnOk_Click"/>
        </StackPanel>
    </Grid>
</Window>
