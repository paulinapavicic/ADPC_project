<Window x:Class="Project_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_2"
        mc:Ignorable="d"
         Title="TCGA Gene Expression Pipeline" Height="600" Width="900" >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button x:Name="btnScrapeData" Content="Scrape TCGA Data" Click="btnScrapeData_Click" Width="150" Margin="5"/>
            <Button x:Name="btnImportClinical" Content="Import Clinical Data" Click="btnImportClinical_Click" Width="150" Margin="5"/>
            <Button x:Name="btnVisualize" Content="Visualize Data" Click="btnVisualize_Click" Width="150" Margin="5"/>
        </StackPanel>

        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Cohort Data">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <GroupBox Grid.Column="0" Header="Available Cohorts">
                        <StackPanel>
                            <ListBox x:Name="lstCohorts" Height="400" SelectionChanged="lstCohorts_SelectionChanged"/>
                            <Button x:Name="btnProcessCohort" Content="Process Selected Cohort" 
                                    Click="btnProcessCohort_Click" Margin="5,10"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Grid.Column="1" Header="Stored Files (MinIO)">
                        <DataGrid x:Name="dgMinioFiles" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*"/>
                                <DataGridTextColumn Header="Cohort" Binding="{Binding Cohort}" Width="100"/>
                                <DataGridTextColumn Header="Upload Date" Binding="{Binding UploadDate}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem Header="Gene Expression Data">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Select Patient:" VerticalAlignment="Center" Margin="5"/>
                        <ComboBox x:Name="cmbPatients" Width="200" Margin="5" 
                                 SelectionChanged="cmbPatients_SelectionChanged"/>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <GroupBox Grid.Column="0" Header="Gene Expression Values">
                            <DataGrid x:Name="dgGeneExpressions" AutoGenerateColumns="False" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Gene" Binding="{Binding Gene}" Width="120"/>
                                    <DataGridTextColumn Header="Expression Value" Binding="{Binding Value}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>

                        <GroupBox Grid.Column="1" Header="Visualization">
                            <Canvas x:Name="plotCanvas" Background="White"/>
                        </GroupBox>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Clinical Data">
                <Grid>
                    <DataGrid x:Name="dgClinicalData" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Patient ID" Binding="{Binding PatientId}" Width="120"/>
                            <DataGridTextColumn Header="Cancer Cohort" Binding="{Binding CancerCohort}" Width="100"/>
                            <DataGridTextColumn Header="Clinical Stage" Binding="{Binding ClinicalStage}" Width="100"/>
                            <DataGridTextColumn Header="DSS" Binding="{Binding DiseaseSpecificSurvival}" Width="60"/>
                            <DataGridTextColumn Header="OS" Binding="{Binding OverallSurvival}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
